<?xml version='1.0' encoding='utf-8'?>
<plugin id="spotify-login-cordova-url-scheme" version="1" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>spotify-login-cordova-url-scheme</name>

    <platform name="android">
        <config-file target="res/values/strings.xml" parent="/*">
            <string name="com_spotify_sdk_redirect_scheme">spotify-login</string>
            <string name="com_spotify_sdk_redirect_host">callback</string>
        </config-file>
    </platform>
    
    <platform name="ios">
        <config-file target="*-Info.plist" parent="CFBundleURLTypes">
            <array>
                <dict>
                    <key>CFBundleTypeRole</key>
                    <string>Editor</string>
                    <key>CFBundleURLName</key>
                    <string>Spotify Auth</string>
                    <key>CFBundleURLSchemes</key>
                    <array>
                        <string>spotify-login</string>
                    </array>
                </dict>
            </array>
        </config-file>
    </platform>
</plugin>